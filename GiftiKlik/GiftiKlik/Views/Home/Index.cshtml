    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <button class="close" data-dismiss="modal"><span>&times;</span></button>
                <iframe src="" height="350" width="400" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>




